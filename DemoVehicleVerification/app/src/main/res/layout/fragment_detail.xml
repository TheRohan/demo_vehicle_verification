            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- yearOfManufacture-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llcyearOfManufacture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

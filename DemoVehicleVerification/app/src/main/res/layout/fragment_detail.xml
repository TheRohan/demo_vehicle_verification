                    android:textSize="@dimen/normal_text" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- taxStatus-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llctaxStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
